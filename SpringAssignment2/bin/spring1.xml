<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
    "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
<bean id="question" class="com.capgemini.Question2">
<property name="questionId" value="1"/>
<property name="question" value="how are you"/>
<property name="answer" value="seshu"/>
</bean>
<bean id="question1" class="com.capgemini.Question2">
<property name="questionId" value="2"/>
<property name="question" value="i am "/>
<property name="answer" value="fine"/>
</bean>
<bean id="demo" class="com.capgemini.ListDemo">
<property name="answers">
<set>
<ref bean="question"></ref>
<ref bean="question1"></ref>
</set> 
</property>
</bean>
</beans>